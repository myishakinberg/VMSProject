@model VMSProjectV2.Models.VolunteerViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "VMS Data";
}
@{
    //var db = Database.Open("VMS");
    //var query = "SELECT * FROM Product";
}
<h3>@ViewData["Message"]</h3>

<h1>Volunteer Management System</h1>
<div class="container" onload="myFunction()">
    <div class="col-sm-4">
        <table class="table table-bordered">
            <tr>
                <th>
                    Please Select Action
                </th>
            </tr>
            <tr>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addNewVolunteerModal">Add New Volunteer</button>
                </td>
            </tr>
            <tr>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addNewVolunteerModal">Search Volunteers</button>
                </td>
            </tr>
            <tr>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addNewVolunteerModal">Change Volunteer Filter</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="col-md-8">
        <table id="manageVolunteersTable"class="table table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Skills</th>
                <th>Volunteer Opportunity</th>
                <th>Edit</th>
                
            </tr>
        </table>
    </div>
</div>
<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Volunteer Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="input-group">
                        First Name: <input id="firstName" type="text" class="form-control" placeholder="Edit First Name">
                    </div>
                    <div class="input-group">
                        Last Name: <input id="lastName" type="text" class="form-control" placeholder="Edit Last Name">
                    </div>
                    <div class="input-group">
                        Enter Skills: <input id="newSkill" type="text" class="form-control" placeholder="Add Skills">
                    </div>
                    <div class="input-group" id="selectedOpp">
                        <select>
                            <option>Select Opportunity</option>
                            <option>UNF School of Computing</option>
                            <option>Womens Shelter</option>
                            <option>JAX Homeless Kitchen</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="editVolunteerModalSaveChanges" onclick="editSaveChanges()" button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!-- New Volunteer Modal -->
<div class="modal fade" id="addNewVolunteerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Volunteer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="input-group">
                        First Name: <input id="firstName" type="text" class="form-control" placeholder="First Name">
                    </div>
                    <div class="input-group">
                        Last Name: <input id="lastName" type="text" class="form-control" placeholder="Last Name">
                    </div>
                    <div class="input-group">
                        Enter Skills: <input id="newSkill" type="text" class="form-control" placeholder="Skills">
                    </div>
                    <div class="input-group" id="selectedOpp">
                        <select>
                            <option>Select Opportunity</option>
                            <option>UNF School of Computing</option>
                            <option>Womens Shelter</option>
                            <option>JAX Homeless Kitchen</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="saveChanges()" type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var volunteerSkills;

    function saveChanges() {
        var firstName = document.getElementById("firstName").value;
        var lastName = document.getElementById("lastName").value;
        var skills = document.getElementById("newSkill").value;
        var selectedOpp = $("#selectedOpp").find(":selected").text();
        $.ajax({
            type: "POST",
            url: "AjaxCallToCreateNewVolunteer?firstName=" + firstName + "&lastName=" + lastName,
            success: function (response) {
                $("#manageVolunteersTable").find('tbody')
                    .append($('<tr>')
                        .append($('<td>').append(firstName))
                        .append($('<td>').append(lastName))
                        .append($('<td>').append(skills))
                        .append($('<td>').append(selectedOpp))
                        //.append($('<td>').append('<button data-toggle=modal data-target=#editModal> Edit </button>'))
                );
                $("#addNewVolunteerModal").modal('hide');
            }
        });
    }

    $('#editModal').on('shown.bs.modal', function () {
    });

    $('#addNewVolunteerModal').on('shown.bs.modal', function () {
    });
</script>