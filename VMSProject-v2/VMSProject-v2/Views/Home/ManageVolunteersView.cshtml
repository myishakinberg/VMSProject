@model VMSProjectV2.Models.VolunteerViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "VMS Data";
}
@{
    //var db = Database.Open("VMS");
    //var query = "SELECT * FROM Product";
}
<h3>@ViewData["Message"]</h3>

<h1>Volunteer Management System</h1>
<div class="container">
    <div class="col-sm-4">
        <table class="table table-bordered">
            <tr>
                <th>
                    Please Select Action
                </th>
            </tr>
            <tr>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addNewVolunteerModal">Add New Volunteer</button>
                </td>
            </tr>
            <tr>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addNewVolunteerModal">Search Volunteers</button>
                </td>
            </tr>
            <tr>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addNewVolunteerModal">Change Volunteer Filter</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="col-md-8">
        <table id="manageVolunteersTable"class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Skills</th>
                <th>Volunteer Opportunity</th>
                <th>Edit</th>
            </tr>
            <tr>
                <td>1</td>
                <td>Myisha Kinberg</td>
                <td>Organzation, technical, customers service</td>
                <td>UNF School of Computing Assistant</td>
                <td> <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">Edit</button></td>
            </tr>
        </table>
    </div>
</div>
<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Volunteer Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Edit Name">
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Edit Skills">
                    </div>
                    <div class="input-group">
                        <select>
                            <option>Select Opportunity</option>
                            <option>UNF School of Computing</option>
                            <option>Womens Shelter</option>
                            <option>JAX Homeless Kitchen</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="editVolunteerModalSaveChanges"type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!-- New Volunteer Modal -->
<div class="modal fade" id="addNewVolunteerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Volunteer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Edit Name">
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Edit Skills">
                    </div>
                    <div class="input-group">
                        <select>
                            <option>Select Opportunity</option>
                            <option>UNF School of Computing</option>
                            <option>Womens Shelter</option>
                            <option>JAX Homeless Kitchen</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="addNewVolunteerSubmit"type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#editModal').on('shown.bs.modal', function () {
    });

    $('#addNewVolunteerModal').on('shown.bs.modal', function () {
    });

    $('#addNewVolunteerSubmit').click(function () {
        var firstName = document.getElementById("firstName").value;
        console.log(firstName);
        $.ajax({
            url: "Home/AjaxCallToCreateNewVolunteer?firstName=" + firstName,
            success: function () {
                $("#manageVolunteersTable").find("<tbody>").append($('<tr>').append($('<td>').attr('innerText', firstName)));
            }
        });
    });
</script>